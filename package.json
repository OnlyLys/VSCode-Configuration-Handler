{
    "name": "@onlylys/vscode-configuration-handler",
    "description": "Tools to make handling configurations in VS Code extensions easier. This is primarily a shared dependency for the extensions that I am working on.",
    "version": "0.1.0",
    "publisher": "OnlyLys",
    "author": {
        "name": "L.Y. Sim",
        "email": "OnlyLys@protonmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OnlyLys/VSCode-Configuration-Handler.git"
    },
    "homepage": "https://github.com/OnlyLys/VSCode-Configuration-Handler",
    "bugs": {
        "url": "https://github.com/OnlyLys/VSCode-Configuration-Handler/issues"
    },
    "license": "MIT",
    "main": "./out/index.js",
    "files": [
        "out/*.js",
        "out/*.js.map",
        "out/types/*.d.ts"
    ],
    "types": "./out/types/index.d.ts",
    "activationEvents": [],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "VSCode Configuration Handler Test Configurations",
            "properties": {
                "@onlylys/vscode-configuration-handler.config": {
                    "$comment": "This test configuration was inspired by `leaper.detectedPairs`. Each element in the array must have exact length of 2. The exact JSON schema is not provided here.",
                    "type": "array",
                    "default": [
                        "()",
                        "[]",
                        "{}",
                        "<>",
                        "``",
                        "''",
                        "\"\""
                    ],
                    "markdownDescription": "DO NOT USE. For tests only!"
                },
                "@onlylys/vscode-configuration-handler.deprConfig": {
                    "$comment": "This test configuration was inspired by `leaper.additionalTriggerPairs`. This configuration simulates a deprecated configuration.",
                    "type": "array",
                    "default": [
                        {
                            "open": "(",
                            "close": ")"
                        },
                        {
                            "open": "[",
                            "close": "]"
                        },
                        {
                            "open": "{",
                            "close": "}"
                        },
                        {
                            "open": "<",
                            "close": ">"
                        },
                        {
                            "open": "`",
                            "close": "`"
                        },
                        {
                            "open": "'",
                            "close": "'"
                        },
                        {
                            "open": "\"",
                            "close": "\""
                        }
                    ],
                    "markdownDescription": "DO NOT USE. For tests only!"
                },
                "@onlylys/vscode-configuration-handler.configBadDefaultValue": {
                    "$comment": "This test configuration is the same as `@onlylys/vscode-configuration-handler.config` but with a bad default value.",
                    "type": "array",
                    "default": [
                        "(())",
                        "[]",
                        "{}",
                        "<>",
                        "``",
                        "''",
                        "\"\""
                    ],
                    "markdownDescription": "DO NOT USE. For tests only!"
                },
                "@onlylys/vscode-configuration-handler.deprConfigBadDefaultValue": {
                    "$comment": "This test configuration is the same as `@onlylys/vscode-configuration-handler.deprConfig` but with a bad default value.",
                    "type": "array",
                    "default": [
                        {
                            "open": "((",
                            "close": "))"
                        },
                        {
                            "open": "[",
                            "close": "]"
                        },
                        {
                            "open": "{",
                            "close": "}"
                        },
                        {
                            "open": "<",
                            "close": ">"
                        },
                        {
                            "open": "`",
                            "close": "`"
                        },
                        {
                            "open": "'",
                            "close": "'"
                        },
                        {
                            "open": "\"",
                            "close": "\""
                        }
                    ],
                    "markdownDescription": "DO NOT USE. For tests only!"
                }
            }
        }
    },
    "scripts": {
        "build": "node ./scripts/clean-typescript-output.js && tsc --build",
        "watch": "tsc --watch",
        "prepare": "node ./node_modules/vscode/bin/install",
        "prepack": "npm run build",
        "pretest": "npm run build",
        "test": "node ./scripts/launch-tests.js"
    },
    "engines": {
        "vscode": "^1.32.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^10.14.17",
        "shelljs": "^0.8.3",
        "tslint": "^5.19.0",
        "typescript": "^3.6.2",
        "vscode": "^1.1.36"
    }
}
